{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true, // 生成*.d.ts
    "declarationDir": "./types/", /* '.d.ts' 文件输出目录 */
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
